<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.ManageAccount.settingAccountActivity">

    <include
        android:id="@+id/include5"
        layout="@layout/tool_bar"
        tools:layout_editor_absoluteX="37dp"
        tools:layout_editor_absoluteY="-266dp" />

    <EditText
        android:id="@+id/field1"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:paddingLeft="20dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="192dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/include5" />

    <EditText
        android:id="@+id/field2"
        android:layout_width="360dp"
        android:layout_height="68dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="64dp"
        android:paddingLeft="20dp"
        android:ems="10"
        android:inputType="text"
        android:background="@drawable/round"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field1" />

    <Button
        android:id="@+id/send"
        android:layout_width="225dp"
        android:layout_height="48dp"
        android:layout_marginTop="52dp"
        android:text="Envoyer"
        android:background="@drawable/pubbutton"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/field2" />

</androidx.constraintlayout.widget.ConstraintLayout>